.cu-custom, .cu-custom .cu-bar {
	background-color: #F3FAFC;
}
page {
    background-color: #fff;
}
.info {
    display: flex;
    justify-content: space-between;
    height: 342rpx;
    padding: 44rpx 35rpx 0;
    background: linear-gradient(0deg,rgba(229,244,255,1),rgba(243,250,252,1));
}
.info > view {
    display: flex;
    align-items: center;
    height: 126rpx;
}
.info > view > image {
    width: 125rpx;
    height: 126rpx;
    border-radius: 50%;
    margin-right: 25rpx;
}
.info > view > view > text {
    display: block;
    margin-bottom: 10rpx;
    color: #000519;
    font-size: 34rpx;
}
.info > view > view > view {
    display: flex;
    align-items: center;
    height: 39rpx;
    padding-right: 10rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
.info > view > view > view text {
    color: #394451;
    line-height: 39rpx;
    font-size: 24rpx;
}
.info > view > view image {
    width: 38rpx;
    height: 39rpx;
    margin-right: 10rpx;
}

.info > button:not([size='mini']) {
    width: 117rpx;
    height: 60rpx;
    margin: 52rpx 0 0;
    padding: 0;
    background:#5395F5;
    border-radius:30rpx;
    color: #fff;
    line-height: 60rpx;
    font-size: 30rpx;
}
.info > button[disabled]:not([type]) {
	background-color: #bebebe;
	color: #fff;
	box-shadow: none;
}
.cu-list.card-menu {
    margin: -120rpx 35rpx 20rpx;
    border-radius: 0;
}

.cu-list.menu>.cu-item.arrow {
    height: 130rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow:0px 7px 37px 1px rgba(211,233,245,0.82);
}
.cu-list.menu>.cu-item:after {
    border-bottom: 0;
}
.cu-list.menu>.cu-item .content>image {
    width: 38rpx;
    height: 38rpx;
}
.cu-list.menu>.cu-item .content>text {
    color: #334550;
    font-size: 34rpx;
}